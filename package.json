{
  "name": "panza",
  "version": "3.0.0-beta1",
  "description": "a beautiful foundation for your react-native projects",
  "main": "dist/index.js",
  "scripts": {
    "generate-doc-json": "react-docgen src/**/* --resolver findAllComponentDefinitions -o docs/api/components.json --pretty",
    "generate-doc-markdown": "node scripts/generate-docs.js",
    "generate-docs": "npm run generate-doc-json && npm run generate-doc-markdown",
    "docs:clean": "rimraf _book",
    "docs:prepare": "gitbook install",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:build": "npm run generate-docs && npm run docs:prepare && gitbook build cp docs/assets/panza.web.js docs/assets/ReactNative.js _book/gitbook",
    "docs:publish": "npm run docs:clean && npm run docs:build && gh-pages -d _book",
    "test": "mocha --require react-native-mock/mock.js scripts/mocks.js --compilers js:babel-core/register --recursive src/**/__specs__/*.spec.js",
    "prepublish": "npm run lint && npm run test && npm run build && npm run build:umd",
    "build": "rimraf dist && babel ./src -d dist --ignore **/__specs__",
    "build:umd": "webpack --config webpack.config.js --progress",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmcmahen/panza.git"
  },
  "keywords": [
    "react-native",
    "widgets",
    "ui",
    "bootstrap",
    "foundation",
    "forms"
  ],
  "author": "Ben McMahen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bmcmahen/panza/issues"
  },
  "homepage": "https://github.com/bmcmahen/panza#readme",
  "dependencies": {
    "color": "^0.11.1",
    "deep-assign": "^2.0.0",
    "hoist-non-react-statics": "^1.2.0",
    "lodash": "^4.13.1",
    "react-native-vector-icons": "^2.0.3"
  },
  "peerDependencies": {
    "react": "^15.1.0",
    "react-native": "^0.29.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-react-native": "^1.9.0",
    "chai": "^3.5.0",
    "chai-subset": "^1.3.0",
    "enzyme": "^2.3.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "gh-pages": "^0.11.0",
    "gitbook-cli": "^2.3.0",
    "gitbook-plugin-anker-enable": "0.0.4",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^2.0.0",
    "gitbook-plugin-prism": "^1.0.0",
    "gitbook-plugin-scripts": "^1.0.1",
    "mocha": "^2.5.3",
    "react-addons-test-utils": "^15.1.0",
    "react-docgen": "^2.8.2",
    "react-native-mock": "^0.2.3",
    "rimraf": "^2.5.2",
    "throng": "^4.0.0",
    "webpack": "^1.13.1"
  }
}
